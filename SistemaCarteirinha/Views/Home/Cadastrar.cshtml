@page
@model SistemaCarteirinha.Models.PessoaFisica

<div class="text-center">
    <h1 class="display-4">Cadastro de Clientes</h1>
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Cpf, "Cpf*:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, "Nome*:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sexo, "Sexo:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sexo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DtNascimento, "Data Nascimento:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.DtNascimento)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rg, "Rg:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rg)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Endereco, "Endereço:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Endereco)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefone, "Telefone:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telefone)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "E-mail:")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email)
        </div>
    </div>
}
